                <div class="row">
                        
                        <!-- ============================================================== -->
                        <!-- valifation types -->
                        <!-- ============================================================== -->
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <% if(response.message_success){ %>
                                <div class="alert alert-success" role="alert">
                                    <%= response.message_success %>
                                </div>
                                <% } %>
                            <div class="card">
                                <h5 class="card-header">Add New Menu</h5>

                                <div class="card-body">
                                    <form id="validationform" data-parsley-validate="" novalidate="" action="/master/add-item-save" method="POST">
                                       
                                        <div class="form-group row">
                                            <div class="col-md-2">Name</div>
                                            <div class="col-md-6">
                                                <input type="text" required="" name="name" class="form-control">
                                            </div> 

                                            <div class="col-md-2">Group</div>
                                            <div class="col-md-2">
                                                <select class="form-control" name="grcode" id="grcode">
                                                    
                                                    <% 
                                                    if(typeof response.group.length != 'undefined'){
                                                    for(var i=0; i < response.group.length; i++) { %>
                                                        <option value="<%= response.group[i].id %>">  <%= response.group[i].name %> </option>
                                                    <% }
                                                     }
                                                    %> 
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <div class="col-md-2">Item Code</div>
                                            <div class="col-md-2">
                                                <input type="text" required="" name="itcode" class="form-control">
                                            </div>

                                            <div class="col-md-2">Tax Type</div>
                                            <div class="col-md-2">
                                                <select class="form-control" name="tax_type" id="taxtype">
                                                    <option value="Taxable">Taxable</option>
                                                    <option value="Non Taxable">Non Taxable</option>
                                                </select>
                                            </div>

                                            <div class="col-md-2">Bar Menu</div>
                                            <div class="col-md-2">
                                                <input type="checkbox" name="bartype" class="form-control" value="1">
                                            </div>
                                        </div>

                                        <div class="form-group row">   
                                            <div class="col-md-2">Rate</div>
                                            <div class="col-md-2">
                                                <input type="number" required="" name="rate" class="form-control">
                                            </div>

                                            <div class="col-md-2">Festival Rate</div>
                                            <div class="col-md-2">
                                                <input type="number" name="f_rate" class="form-control">
                                            </div>

                                            <div class="col-md-2">MRP</div>
                                            <div class="col-md-2">
                                                <input type="number" name="mrp" class="form-control" value=0>
                                            </div>
                                        </div>

                                        <div class="form-group row"> 
                                            <div class="col-md-2">Food Type</div>
                                            <div class="col-md-2">
                                                <select class="form-control" name="food_type" id="foodtype">
                                                    <option value="Food">Food</option>
                                                    <option value="Drinks">Drinks</option>
                                                    <option value="Others">Others</option>
                                                </select>
                                            </div>

                                            <div class="col-md-2">Half Menu</div>
                                            <div class="col-md-2">
                                                <input type="checkbox" name="half" class="form-control" value="1">
                                            </div>

                                            <div class="col-md-2">Alternate Code</div>
                                            <div class="col-md-2">
                                                <input type="text" name="altcode" class="form-control">
                                            </div>
                                        </div>    
                                        
                                        <div class="form-group row">
                                            <div class="col-md-2">Stock</div>
                                            <div class="col-md-2">
                                                <input type="checkbox" name="stock" class="form-control" value="1">
                                            </div>

                                            <div class="col-md-2">No of Peg</div>
                                            <div class="col-md-2">
                                                <input type="number" name="peg" class="form-control" value=0>
                                            </div>
                                        </div>
                                        
                                        <div class="form-group row">
                                            <div class="col-md-2">ML</div>
                                            <div class="col-md-2">
                                                <select class="form-control" name="mltype" id="mltype">
                                                    <option value="100 ML">100 ML</option>
                                                    <option value="750 ML">750 ML</option>
                                                    <option value="375 ML">375 ML</option>
                                                    <option value="PEG">PEG</option>
                                                </select>
                                            </div>
                                            
                                            <div class="col-md-2">Wine Type</div>
                                            <div class="col-md-2">
                                                <select class="form-control" name="winetype" id="winetype">
                                                    <option value="Whiskey">Whiskey</option>
                                                    <option value="Vodka">Vodka</option>
                                                    <option value="Rum">Rum</option>
                                                    <option value="Beer">Beer</option>
                                                    <option value="Wine">Wine</option>
                                                    <option value="Scotch">Scotch</option>
                                                    <option value="Others">Others</option>
                                                </select>
                                            </div>
                                            <div class="col-md-2">Special Menu</div>
                                            <div class="col-md-2">
                                                <input type="checkbox" name="special" class="form-control" value="1">
                                            </div>
                                        </div>
                                       
                                        <div class="form-group row text-right">
                                            <div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-0">
                                                <button type="submit" class="btn btn-space btn-primary">Submit</button>
                                                <button class="btn btn-space btn-secondary">Cancel</button>
                                            </div>
                                        </div> 


                                    </form>
                                </div>
                            </div>
                        </div>
                        <!-- ============================================================== -->
                        <!-- end valifation types -->
                        <!-- ============================================================== -->
                    </div>
            </div>
            
            <script>
            $('#form').parsley();
            </script> 

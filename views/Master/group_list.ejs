<% include ../Common/header  %>
    <!-- left sidebar -->
    <% include ../Common/side-menu  %>
    <!-- end left sidebar -->
        <!-- ============================================================== -->
        <!-- wrapper  -->
        <!-- ============================================================== -->
        <div class="dashboard-wrapper">
            <div class="container-fluid  dashboard-content">
                <!-- ============================================================== -->
                <!-- pageheader -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="page-header row">
                            <div class="col-md-6">
                                <h4 class="pageheader-title">Group</h4>
                            </div>
                            <div class="col-md-6 text-md-right">
                              <a href="#" data-toggle="modal" data-target="#addModal"> <i class="fas fa-plus-square"></i> Add New </a>
                            </div>                           
                        </div>
                    </div>
                </div> 
                <!-- ============================================================== -->
                <!-- end pageheader -->
                <!-- ============================================================== -->                
              
                <div class="row">
                    <!-- ============================================================== -->
                    <!-- data table multiselects  -->
                    <!-- ============================================================== -->
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <% if(response.message_success){ %>
                        <div class="alert alert-success" role="alert">
                            <%= response.message_success %>
                        </div>
                        <% } %>

                        <div class="card">
                          
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="listGrid" class="table table-striped table-bordered" style="width:100%">
                                        <thead class="bg-primary">
                                            <tr>
                                                <th class="text-white">Title / Group</th>                                               
                                                <th class="text-white">Status</th>  
                                                <th class="text-white all" width="200">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody> </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>Title / Group</th>                                                
                                                <th>Status</th>       
                                                <th>Action</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ============================================================== -->
                    <!-- end data table multiselects  -->
                    <!-- ============================================================== -->
                </div>
            </div>

            <!-- ACTION BUTTONS -->
            <div id="listGridActionButtons" data-fields="id" style="display: none;">
            <td>
            <a href="#" onclick="script:edit_item([id]);"> <i class="fas fa-edit"></i> Edit</a>
            &nbsp; <a href="#" onclick="script:confirm_delete('/master/group-delete/[id]');"><i class="fas fa-trash-alt"></i> Delete</a> </td>
            </div>


        <!-- ADD MODAL -->
        <div class="modal fade" id="addModal">
            <div class="modal-dialog modal-dialog-centered">                  
                <div class="modal-content">  
                    <form name="modalAdd" id="modalAdd" action="/master/group-add" method="POST" class="needs-validation" novalidate>                
                    
                    <!-- Modal Header -->
                    <div class="modal-header">
                    <h4 class="modal-title">Add New Group </h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>                    
                    <!-- Modal body -->
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Group</label>
                            <input type="text" class="form-control" name="group"  required>
                        </div>
                    </div>                    
                    <!-- Modal footer -->
                    <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" >Save</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>   
                    </form>                  
                </div>                  
            </div>
        </div>

        <!-- EDIT MODAL -->
        <div class="modal fade" id="editModal">
            <div class="modal-dialog modal-dialog-centered">                  
                <div class="modal-content">  
                    <form name="modalEdit" id="modalEdit" action="/master/group-edit" method="POST" class="needs-validation" novalidate>                
                    <input type="hidden" name="edit_id" id="edit_id">
                    <!-- Modal Header -->
                    <div class="modal-header">
                    <h4 class="modal-title">Edit Group </h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>                    
                    <!-- Modal body -->
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Group Name<small class="text-muted"></small></label>
                            <input type="text" class="form-control" name="name"  required>
                        </div>
                        <div class="form-group">
                                <label>Status <small class="text-muted"></small></label>
                                <select class="form-control" name="status" id="group-status">
                                    <option value="Active">Active</option>
                                    <option value="Inactive">Inactive</option>
                                </select>
                                
                            </div>
                    </div>                    
                    <!-- Modal footer -->
                    <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" >Update</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>   
                    </form>                  
                </div>                  
            </div>
        </div>

            
<script>

function edit_item(pid){
    $("#edit_id").val(pid);
    $("#editModal").modal();

    $.ajax({
        method: "POST",
        url: "/master/group-get",
        type:JSON,
        data: { id: pid }
    })
    .done(function( data ) {      
       $("#modalEdit").find("input[name='name']").val(data[0].name);
       $("#group-status").val(data[0].status);       
    });
}


var listGridajaxURL = '/master/list-group-ajax';
